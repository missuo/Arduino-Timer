<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_show_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示作者信息"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_reset"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="482dp" />

    <Button
        android:id="@+id/btn_set_countdown_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设定倒计时 +10秒"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_set_countdown_one"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="338dp" />

    <Button
        android:id="@+id/btn_start_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始倒计时"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_set_countdown_ten"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/btn_set_countdown_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设定倒计时 +1秒"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_show3"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="290dp" />

    <Button
        android:id="@+id/btn_show2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示第二组计时"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_show1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="194dp" />

    <Button
        android:id="@+id/btn_show1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示第一组计时"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_timer_finish"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重置"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_start_countdown"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="434dp" />

    <Button
        android:id="@+id/btn_show3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示第三组计时"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_show2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/btn_timer_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停并记录"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_timer_on"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="50dp" />

    <Button
        android:id="@+id/btn_timer_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结束计时"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_timer_stop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="98dp" />

    <Button
        android:id="@+id/btn_timer_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始计时"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        app:layout_constraintTop_toBottomOf="@id/btn_show_author"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>